{
	"name": "semiotic-sql-studio",
	"displayName": "Semiotic SQL Studio",
	"description": "A SQL interface for The Graph Protocol managed by Semiotic Labs",
	"version": "0.0.1",
	"publisher": "SemioticLabs",
	"engines": {
		"vscode": "^1.86.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onEditSession:scheme:gsql"
	],
	"main": "./dist/extension.js",
	"extensionDependencies": [
		"vscode.sql"
	],
	"contributes": {
		"languages": [
			{
				"id": "gsql",
				"extensions": [
					".gsql"
				],
				"aliases": [
					"GSQL"
				],
				"configuration": "./syntaxes/gsql.configuration.json"
			}
		],
		"grammars": [
			{
				"language": "gsql",
				"scopeName": "source.gsql",
				"path": "./syntaxes/GSQL.plist"
			}
		],
		"outputChannels": [
			"GSQL"
		],
		"snippets": [
			{
				"language": "gsql",
				"path": "./snippets/gsql.json"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "extension.gsql.runQuery",
					"when": "editorLangId == gsql"
				}
			]
		},
		"commands": [
			{
				"command": "extension.gsql.runQuery",
				"title": "%extension.gsql.runQuery%",
				"category": "GSQL"
			},
			{
				"command": "extension.gsql.cancelQuery",
				"title": "%extension.gsql.cancelQuery%",
				"category": "GSQL"
			},
			{
				"command": "extension.gsql.chooseSubgraph",
				"title": "%extension.gsql.chooseSubgraph%",
				"category": "GSQL"
			},
			{
				"command": "extension.gsql.newQuery",
				"title": "%extension.gsql.newQuery%",
				"category": "GSQL"
			},
			{
				"command": "subgraphs.loadMoreSubgraphs",
				"title": "Load More",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			}
		],
		"keybindings": [
			{
				"command": "extension.gsql.runQuery",
				"key": "ctrl+m ctrl+r",
				"mac": "cmd+m cmd+r",
				"when": "editorTextFocus && editorLangId == 'gsql'"
			},
			{
				"command": "extension.gsql.chooseSubgraph",
				"key": "ctrl+m ctrl+c",
				"mac": "cmd+m cmd+c",
				"when": "editorTextFocus && editorLangId == 'gsql'"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "subgraph-explorer",
					"title": "Subgraph Explorer",
					"icon": "resources/the-graph.svg"
				}
			]
		},
		"views": {
			"subgraph-explorer": [
				{
					"id": "subgraph-available",
					"name": "Available Subgraphs"
				},
				{
					"id": "subgraph-columns",
					"name": "Subgraph columns"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "subgraph-columns",
				"contents": "In order to view an specific subgraph columns, select a SQL enabled subgraph.",
				"when": "workbenchState == empty"
			}
		],
		"configuration": {
			"type": "object",
			"title": "GSQL configuration",
			"gsql.gateway": {
				"type": "string",
				"description": "%gsql.gateway%",
				"default": "http://eth.rubik.com.tr:8000/subgraphs/name",
				"scope": "resource"
			},
			"gsql.maxRecentSubgraphs": {
				"type": "number",
				"default": 5,
				"description": "%gsql.maxRecentSubgraphs%",
				"scope": "window"
			},
			"gsql.subgraphs": {
				"type": "array",
				"default": [
					{
						"name": "{{put-subgraph-name-here}}"
					}
				],
				"description": "%gsql.subgraphs%",
				"items": {
					"type": "object",
					"properties": {
						"name": {
							"type": "string",
							"default": "{{put-subgraph-name-here}}",
							"description": "%gsql.subgraph.name%"
						}
					}
				},
				"scope": "resource"
			},
			"gsql.shortcuts": {
				"type": "object",
				"description": "%gsql.shortcuts%",
				"default": {
					"_comment": "Short cuts must follow the format (ctrl)+(shift)+(alt)+[key]",
					"event.toggleResultPane": "ctrl+alt+r",
					"event.toggleMessagePane": "ctrl+alt+y",
					"event.prevGrid": "ctrl+up",
					"event.nextGrid": "ctrl+down",
					"event.copySelection": "ctrl+c",
					"event.copyWithHeaders": "",
					"event.maximizeGrid": "",
					"event.selectAll": "",
					"event.saveAsJSON": "",
					"event.saveAsCSV": "",
					"event.saveAsExcel": ""
				},
				"scope": "resource"
			},
			"gsql.messagesDefaultOpen": {
				"type": "boolean",
				"description": "%gsql.messagesDefaultOpen%",
				"default": true,
				"scope": "resource"
			},
			"gsql.resultsFontFamily": {
				"type": "string",
				"description": "%gsql.resultsFontFamily%",
				"default": "-apple-system,BlinkMacSystemFont,Segoe WPC,Segoe UI,HelveticaNeue-Light,Ubuntu,Droid Sans,sans-serif",
				"scope": "resource"
			},
			"gsql.resultsFontSize": {
				"type": "number",
				"description": "%gsql.resultsFontSize%",
				"default": 13,
				"scope": "resource"
			},
			"gsql.saveAsCsv.includeHeaders": {
				"type": "boolean",
				"description": "%gsql.saveAsCsv.includeHeaders%",
				"default": true,
				"scope": "resource"
			},
			"gsql.copyIncludeHeaders": {
				"type": "boolean",
				"description": "%gsql.copyIncludeHeaders%",
				"default": false,
				"scope": "resource"
			},
			"gsql.copyRemoveNewLine": {
				"type": "boolean",
				"description": "%gsql.copyRemoveNewLine%",
				"default": true,
				"scope": "resource"
			},
			"gsql.showBatchTime": {
				"type": "boolean",
				"description": "%gsql.showBatchTime%",
				"default": false,
				"scope": "resource"
			},
			"gsql.splitPaneSelection": {
				"type": "string",
				"description": "%gsql.splitPaneSelection%",
				"default": "next",
				"enum": [
					"next",
					"current",
					"end"
				],
				"scope": "resource"
			},
			"gsql.format.alignColumnDefinitionsInColumns": {
				"type": "boolean",
				"description": "%gsql.format.alignColumnDefinitionsInColumns%",
				"default": false,
				"scope": "window"
			},
			"gsql.format.datatypeCasing": {
				"type": "string",
				"description": "%gsql.format.datatypeCasing%",
				"default": "none",
				"enum": [
					"none",
					"uppercase",
					"lowercase"
				],
				"scope": "window"
			},
			"gsql.format.keywordCasing": {
				"type": "string",
				"description": "%gsql.format.keywordCasing%",
				"default": "none",
				"enum": [
					"none",
					"uppercase",
					"lowercase"
				],
				"scope": "window"
			},
			"gsql.format.placeCommasBeforeNextStatement": {
				"type": "boolean",
				"description": "%gsql.format.placeCommasBeforeNextStatement%",
				"default": false,
				"scope": "window"
			},
			"gsql.format.placeSelectStatementReferencesOnNewLine": {
				"type": "boolean",
				"description": "%gsql.format.placeSelectStatementReferencesOnNewLine%",
				"default": false,
				"scope": "window"
			},
			"gsql.applyLocalization": {
				"type": "boolean",
				"description": "%gsql.applyLocalization%",
				"default": false,
				"scope": "window"
			},
			"gsql.query.displayBitAsNumber": {
				"type": "boolean",
				"default": true,
				"description": "%gsql.query.displayBitAsNumber%",
				"scope": "window"
			},
			"gsql.intelliSense.enableIntelliSense": {
				"type": "boolean",
				"default": true,
				"description": "%gsql.intelliSense.enableIntelliSense%",
				"scope": "window"
			},
			"gsql.intelliSense.enableErrorChecking": {
				"type": "boolean",
				"default": true,
				"description": "%gsql.intelliSense.enableErrorChecking%",
				"scope": "window"
			},
			"gsql.intelliSense.enableSuggestions": {
				"type": "boolean",
				"default": true,
				"description": "%gsql.intelliSense.enableSuggestions%",
				"scope": "window"
			},
			"gsql.intelliSense.enableQuickInfo": {
				"type": "boolean",
				"default": true,
				"description": "%gsql.intelliSense.enableQuickInfo%",
				"scope": "window"
			},
			"gsql.intelliSense.lowerCaseSuggestions": {
				"type": "boolean",
				"default": false,
				"description": "%gsql.intelliSense.lowerCaseSuggestions%",
				"scope": "window"
			},
			"gsql.persistQueryResultTabs": {
				"type": "boolean",
				"default": false,
				"description": "%gsql.persistQueryResultTabs%",
				"scope": "window"
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test": "vscode-test",
		"release": "semantic-release",
		"check-format": "prettier --check .",
		"prepare": "husky",
		"docs": "typedoc"
	},
	"devDependencies": {
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/commit-analyzer": "^11.1.0",
		"@semantic-release/git": "^10.0.1",
		"@types/mocha": "^10.0.6",
		"@types/node": "18.x",
		"@types/vscode": "^1.86.0",
		"@typescript-eslint/eslint-plugin": "^6.19.1",
		"@typescript-eslint/parser": "^6.19.1",
		"@vscode/test-cli": "^0.0.4",
		"@vscode/test-electron": "^2.3.9",
		"conventional-changelog-conventionalcommits": "^7.0.2",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"husky": "^9.0.10",
		"lint-staged": "^15.2.1",
		"prettier": "^3.2.4",
		"semantic-release": "^23.0.0",
		"semantic-release-stop-before-publish": "^1.0.0",
		"semantic-release-vsce": "^5.6.4",
		"ts-loader": "^9.5.1",
		"typedoc": "^0.25.7",
		"typedoc-theme-hierarchy": "^4.1.2",
		"typescript": "^5.3.3",
		"webpack": "^5.90.0",
		"webpack-cli": "^5.1.4"
	},
	"dependencies": {
		"graphql": "^16.8.1"
	},
	"volta": {
		"node": "20.11.0",
		"npm": "10.2.4"
	}
}
